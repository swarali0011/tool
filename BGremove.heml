    <script>
        // DOM Elements
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const originalPreview = document.getElementById('originalPreview');
        const resultPreview = document.getElementById('resultPreview');
        const removalLevel = document.getElementById('removalLevel');
        const removalValue = document.getElementById('removalValue');
        const edgeSmoothing = document.getElementById('edgeSmoothing');
        const smoothingValue = document.getElementById('smoothingValue');
        const removeBgBtn = document.getElementById('removeBgBtn');
        const resetBtn = document.getElementById('resetBtn');
        const downloadBtn = document.getElementById('downloadBtn');
        const loadingIndicator = document.getElementById('loadingIndicator');
        const previewContainer = document.getElementById('previewContainer');

        // Event Listeners
        uploadArea.addEventListener('click', () => fileInput.click());
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--primary-color)';
            uploadArea.style.backgroundColor = 'rgba(74, 107, 255, 0.05)';
        });
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.style.borderColor = '#ccc';
            uploadArea.style.backgroundColor = 'transparent';
        });
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = '#ccc';
            uploadArea.style.backgroundColor = 'transparent';
            
            if (e.dataTransfer.files.length) {
                fileInput.files = e.dataTransfer.files;
                handleFileSelect();
            }
        });
        
        fileInput.addEventListener('change', handleFileSelect);
        removalLevel.addEventListener('input', updateRemovalValue);
        edgeSmoothing.addEventListener('input', updateSmoothingValue);
        removeBgBtn.addEventListener('click', removeBackground);
        resetBtn.addEventListener('click', resetTool);
        downloadBtn.addEventListener('click', downloadImage);

        // Functions
        function handleFileSelect() {
            const file = fileInput.files[0];
            if (!file) return;
            
            // Check file size (5MB limit)
            if (file.size > 5 * 1024 * 1024) {
                alert('File size exceeds 5MB limit. Please choose a smaller image.');
                return;
            }
            
            if (!file.type.match('image.*')) {
                alert('Please select an image file (JPEG, PNG, WEBP, etc.)');
                return;
            }
            
            const reader = new FileReader();
            reader.onload = function(e) {
                originalPreview.src = e.target.result;
                originalPreview.style.display = 'block';
                resultPreview.style.display = 'none';
                removeBgBtn.disabled = false;
                resetBtn.disabled = false;
                previewContainer.style.display = 'flex';
                downloadBtn.style.display = 'none';
            };
            reader.readAsDataURL(file);
        }
        
        function updateRemovalValue() {
            removalValue.textContent = removalLevel.value;
        }
        
        function updateSmoothingValue() {
            smoothingValue.textContent = edgeSmoothing.value;
        }
        
        function removeBackground() {
            if (!fileInput.files.length) {
                alert('Please upload an image first');
                return;
            }
            
            loadingIndicator.style.display = 'block';
            removeBgBtn.disabled = true;
            
            // Create a canvas element
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            const img = new Image();
            
            img.onload = function() {
                canvas.width = img.width;
                canvas.height = img.height;
                ctx.drawImage(img, 0, 0);
                
                // Get the image data
                const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                const data = imageData.data;
                
                // Simple background removal (makes light colors transparent)
                const threshold = removalLevel.value * 25; // Adjust based on slider
                const smoothing = edgeSmoothing.value / 2;
                
                for (let i = 0; i < data.length; i += 4) {
                    const r = data[i];
                    const g = data[i + 1];
                    const b = data[i + 2];
                    
                    // Calculate brightness (simple method)
                    const brightness = (r + g + b) / 3;
                    
                    // If pixel is brighter than threshold, make it transparent
                    if (brightness > threshold) {
                        // Apply smoothing to alpha channel
                        const distance = brightness - threshold;
                        if (distance < smoothing) {
                            data[i + 3] = 255 * (1 - (distance / smoothing));
                        } else {
                            data[i + 3] = 0;
                        }
                    }
                }
                
                // Put the modified data back
                ctx.putImageData(imageData, 0, 0);
                
                // Set the result image
                resultPreview.src = canvas.toDataURL('image/png');
                resultPreview.style.display = 'block';
                downloadBtn.style.display = 'inline-flex';
                
                loadingIndicator.style.display = 'none';
                removeBgBtn.disabled = false;
                
                // Scroll to results
                resultPreview.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            };
            
            img.src = URL.createObjectURL(fileInput.files[0]);
        }
        
        function downloadImage() {
            if (!resultPreview.src) return;
            
            const link = document.createElement('a');
            link.download = 'background-removed.png';
            link.href = resultPreview.src;
            link.click();
        }
        
        function resetTool() {
            fileInput.value = '';
            originalPreview.src = '';
            originalPreview.style.display = 'none';
            resultPreview.src = '';
            resultPreview.style.display = 'none';
            removeBgBtn.disabled = true;
            resetBtn.disabled = true;
            removalLevel.value = 5;
            removalValue.textContent = '5';
            edgeSmoothing.value = 5;
            smoothingValue.textContent = '5';
            loadingIndicator.style.display = 'none';
            downloadBtn.style.display = 'none';
        }
        
        // Initialize values
        updateRemovalValue();
        updateSmoothingValue();
    </script>
